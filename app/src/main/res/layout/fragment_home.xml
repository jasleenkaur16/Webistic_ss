<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">

       <VideoView
       android:id="@+id/idVideoView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
          android:layout_marginRight="10dp"
           android:layout_marginBottom="40dp"
           android:orientation="vertical">

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_margin="5dp"
               android:id="@+id/like_btn"
               android:background="@drawable/baseline_favorite_24" />

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_margin="5dp"
               android:id="@+id/comment_btn"
               android:background="@drawable/baseline_comment_24" />

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_margin="5dp"
               android:id="@+id/share_btn"
               android:background="@drawable/baseline_share_24" />

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_margin="5dp"
               android:id="@+id/save_btn"
               android:background="@drawable/baseline_save_alt_24" />
       </LinearLayout>
   </RelativeLayout>


</FrameLayout>